<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginBottom="18dp"
    android:paddingTop="18dp"
    android:layout_height="wrap_content">

        <TextView
            android:textSize="18sp"
            android:textColor="#222"
            android:id="@+id/job_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <TextView
                    android:text="Google Microsoft LTD. STI"
                    android:textStyle="bold"
                    android:id="@+id/job_employer"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                        <TextView
                            android:text="Istanbul"
                            android:id="@+id/job_city"
                            android:layout_marginRight="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_toEndOf="@id/job_city"
                            android:text="Turkey"
                            android:id="@+id/job_country"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/job_city" />
                        <TextView
                            android:layout_alignParentRight="true"
                            android:text="3 minutes ago"
                            android:textSize="12sp"
                            android:id="@+id/job_created_at"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                </RelativeLayout>

        </LinearLayout>


</LinearLayout>