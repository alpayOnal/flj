<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp" >

    <ImageView
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:id="@+id/history_item_icon"
        android:src="@drawable/ic_history_black_18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_toRightOf="@id/history_item_icon"
        android:layout_toEndOf="@id/history_item_icon"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            style="@style/TextAppearance.AppCompat.Menu"
            android:id="@+id/history_keyword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            style="@style/TextAppearance.AppCompat.Caption"
            android:id="@+id/history_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>